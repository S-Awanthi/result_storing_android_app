<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
<!--        <item name="colorPrimary">@color/colorPrimary</item>-->
<!--        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
<!--        <item name="colorAccent">@color/colorAccent</item>-->

        <item name="colorPrimary">#002b80</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#000000</item>
        <item name="actionBarSize">50dip</item>
        <item name="android:actionBarSize">50dip</item>
    </style>

    <!--    ***********STYLES FOR TOAST MESSAGE **************** -->
    <style name="myToastFail">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#FFFFFF</item>
        <!--        <item name="stFont">@font/retrofont</item>-->
        <item name="stTextSize">16sp</item>
        <item name="stColorBackground">#000000</item>
        <item name="stSolidBackground">false</item>
        <item name="stStrokeWidth">1dp</item>
        <item name="stStrokeColor">#FFFFFF</item>
        <item name="stIconStart">@drawable/ic_close</item>
        <!--        <item name="stIconEnd">@drawable/ic</item>-->
        <item name="stLength">SHORT</item> LONG or SHORT
        <item name="stGravity">center</item> top or center
        <item name="stRadius">25dp</item>
    </style>

    <style name="myToastSuccess">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#FFFFFF</item>
        <!--        <item name="stFont">@font/retrofont</item>-->
        <item name="stTextSize">16sp</item>
        <item name="stColorBackground">#000000</item>
        <item name="stSolidBackground">false</item>
        <item name="stStrokeWidth">1dp</item>
        <item name="stStrokeColor">#FFFFFF</item>
        <item name="stIconStart">@drawable/ic_done</item>
        <!--        <item name="stIconEnd">@drawable/ic</item>-->
        <item name="stLength">SHORT</item> LONG or SHORT
        <item name="stGravity">center</item> top or center
        <item name="stRadius">25dp</item>
    </style>

</resources>